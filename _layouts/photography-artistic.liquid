---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<style>
.artistic-gallery {
  margin: 0;
  padding: 0;
}

.artistic-header {
  margin-bottom: 2rem;
  padding: 0;
}

.artistic-header h1 {
  font-size: 2rem;
  font-weight: 400;
  margin-bottom: 1rem;
}

.artistic-header p {
  font-size: 1rem;
  opacity: 0.8;
  line-height: 1.6;
}

.photo-masonry {
  columns: 3;
  column-gap: 12px;
  margin: 2rem 0;
}

.artistic-photo {
  break-inside: avoid;
  margin-bottom: 12px;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  transition: transform 0.3s ease;
  display: inline-block;
  width: 100%;
}

.artistic-photo:hover {
  transform: scale(1.02);
  z-index: 10;
}

.artistic-photo figure {
  margin: 0;
  padding: 0;
  width: 100%;
}

.artistic-photo img {
  width: 100%;
  height: auto;
  display: block;
  transition: filter 0.3s ease;
}

.artistic-photo:hover img {
  filter: brightness(1.1);
}

.artistic-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(2px);
  color: white;
  padding: 1rem;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.artistic-photo:hover .artistic-overlay {
  opacity: 1;
}

.artistic-title {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.25rem;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
}

.artistic-description {
  font-size: 0.85rem;
  opacity: 0.95;
  margin-bottom: 0.5rem;
  line-height: 1.3;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
}

.artistic-meta {
  font-size: 0.7rem;
  opacity: 0.9;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
  background: rgba(0, 0, 0, 0.5);
  padding: 0.2rem 0.4rem;
  border-radius: 3px;
  display: inline-block;
  width: fit-content;
}

/* Responsive design */
@media (max-width: 1024px) {
  .photo-masonry {
    columns: 2;
    column-gap: 10px;
  }
  
  .artistic-photo {
    margin-bottom: 10px;
  }
}

@media (max-width: 768px) {
  .photo-masonry {
    columns: 2;
    column-gap: 8px;
  }
  
  .artistic-photo {
    margin-bottom: 8px;
  }
  
  .artistic-overlay {
    padding: 0.75rem;
  }
  
  .artistic-title {
    font-size: 0.9rem;
  }
  
  .artistic-description {
    font-size: 0.75rem;
  }
}

@media (max-width: 480px) {
  .photo-masonry {
    columns: 1;
    column-gap: 0;
  }
  
  .artistic-photo {
    margin-bottom: 12px;
  }
}
</style>

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
    
    {% if page.photos %}
    <div class="photo-masonry">
      {% for photo in page.photos %}
        <div class="artistic-photo" data-zoomable>
          {% assign photo_path = '/assets/img/photography/' | append: page.photo_category | append: '/' | append: photo.image %}
          {% include figure.liquid 
            path=photo_path 
            class="artistic-image"
            zoomable=true
          %}
          {% if photo.title or photo.description or photo.camera or photo.settings %}
          <div class="artistic-overlay">
            {% if photo.title and photo.title != '' %}
              <div class="artistic-title">{{ photo.title }}</div>
            {% endif %}
            {% if photo.description and photo.description != '' %}
              <div class="artistic-description">{{ photo.description }}</div>
            {% endif %}
            {% if photo.camera or photo.settings %}
              <div class="artistic-meta">
                {% if photo.camera %}{{ photo.camera }}{% endif %}
                {% if photo.camera and photo.settings %} â€¢ {% endif %}
                {% if photo.settings %}{{ photo.settings }}{% endif %}
              </div>
            {% endif %}
          </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    {% endif %}
  </article>
</div>